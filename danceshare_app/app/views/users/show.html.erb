<h2><%= @user.first_name %> <%= @user.last_name %>'s Profile</h2>

<img src="<%= @user.photo_url %> " />

<br/>

<ul>
  <li>Email: <%= @user.email %></li>
  <li>Gender: <%= @user.gender %></li>
  <li>Birthday: <%= @user.dob %></li>
  <br/>
  <li><%= link_to "Performances", user_performances_path(@user) %></li>
  <li><%= link_to "Reviews", "/users/#{@user.id}/reviews" %></li>
</ul>

<br/>

<%= link_to "Add Performance", new_user_performance_path(@user) %>

<br/>

<% if current_user == @user %>
  <%= link_to "Edit Profile", edit_user_path(@user) %>
  <br/><br/><br/>
  <%= link_to "Delete Profile", user_path(@user), method: "delete" %>
<% end %>