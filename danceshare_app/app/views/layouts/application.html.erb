<!DOCTYPE html>
<html>
<head>
  <title>DanceshareApp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <nav>
      <%= link_to "Home", root_path %>
      
      <% if logged_in? %>
        <p><%= link_to("Log Out #{current_user.first_name}!", "/session", method: "delete") %></p>  
      <% else %>
        <p><%= link_to("Please Log In!","/login") %></p>
      <% end %>
    <nav>
  </header>

<%= yield %>

</body>
</html>
