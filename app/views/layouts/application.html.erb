<!DOCTYPE html>
<html>
<head>
  <title>DanceshareApp</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <header>
    <nav>
      <ul>
        <li><%= link_to "Home", root_path %></li>
      
        <% if logged_in? %>
          <li><%= link_to "#{current_user.first_name}'s Profile", user_path(current_user) %></li>
          <li><%= link_to "Log Out", "/session", method: "delete" %></li>  
        <% else %>
          <li><%= link_to "Please Log In!","/login" %></li>
        <% end %>

        <% unless logged_in? %>
          <li><%= link_to "Register for Dance Share", new_user_path %></li>
        <% end %>
      </ul>
    <nav>
  </header>

<%= yield %>

</body>
</html>
