<main class="login">

  <h2 class="user-form-title">
    Please Log In:
  </h2>

  <% if flash[:error] %>
    <div class="errors">
      
      <h3>
        Login Unsuccessful!
      </h3>
      
      <div class="error">
        <%= flash[:error] %>
      </div>

    </div>
  <% end %>

  <div class="login-form">
    <%= form_tag "/session", class: "user-form" do %>
      <%= label_tag :email %>
      <%= email_field_tag :email %>

      <%= label_tag :password %>
      <%= password_field_tag :password %>

      <%= submit_tag "Log in" %>
    <% end %>
  </div>

  <div class="footer-fill">
  </div>

</main>