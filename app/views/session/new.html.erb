<main class="login">
  <h1>Please Log In:</h1>

  <% if flash[:error] %>
    <div class="errors">
      <h3>Login Unsuccessful!</h3>
      <div class="error">
        <%= flash[:error] %>
      </div>
    </div>
  <% end %>

  <div class="login">
    <%= form_tag "/session", class: "login-form" do %>
      <%= label_tag :email %>
      <%= email_field_tag :email %><br/>

      <%= label_tag :password %>
      <%= password_field_tag :password %>
      <br/>
      <%= submit_tag "Log in" %>
    <% end %>
  </div>
</main>