input[type=text], 
input[type=email],
input[type=password],
input[type=date],
input[type=url],
textarea {
  -webkit-transition: all 0.10s ease-in-out;
  -moz-transition: all 0.10s ease-in-out;
  -ms-transition: all 0.10s ease-in-out;
  -o-transition: all 0.10s ease-in-out;
  outline: none;
  padding: 3px 0px 3px 3px;
  margin: 5px 1px 3px 0px;
  border: 1px solid #DDDDDD;

  /*border: 5px solid white; */
    -webkit-box-shadow: 
      inset 0 0 4px  #A598AA,
            0 0 8px #A598AA; 
    -moz-box-shadow: 
      inset 0 0 4px  #A598AA,
            0 0 8px #A598AA; 
    box-shadow: 
      inset 0 0 4px  #A598AA,
            0 0 8px #A598AA; 
    padding: 10px;
    /*background: rgba(255,255,255,0.5);*/
    margin: 0 0 10px 0;
}

input[type=text]:focus, 
input[type=email]:focus, 
input[type=password]:focus,
input[type=date]:focus,
input[type=url]:focus,
textarea:focus {
  box-shadow: 0 0 3px #A598AA;
  padding: 3px 0px 3px 3px;
  margin: 5px 1px 3px 0px;
  border: 1px solid #A598AA;

  /*border: 5px solid white; */
    -webkit-box-shadow: 
      inset 0 0 4px  #A598AA,
            0 0 8px #A598AA; 
    -moz-box-shadow: 
      inset 0 0 4px  #A598AA,
            0 0 8px #A598AA; 
    box-shadow: 
      inset 0 0 4px  #A598AA,
            0 0 8px #A598AA; 
    padding: 10px;
    /*background: rgba(255,255,255,0.5);*/
    margin: 0 0 10px 0;
}

