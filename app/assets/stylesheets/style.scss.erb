/*HOMEPAGE*/

main.page-wrapper {
  padding-bottom: 50px;
  display: inline-block;
  width: 100%;
  margin: 0;

  h2, h3 {
    text-align: center;
    font-family: georgia, serif;
  }

  .videos-wrapper {
    width: 27%;
    display: inline-block;
    vertical-align: top;
    
    ul.home-video-set {
      margin: 0 auto;
      list-style-type: none;
      display: inline-block;
      text-align: center;

      li {
        display: inline-block;
        margin: 15px 3px 0 3px;
        width: 150px;
        text-align: center;
        vertical-align: top;
        

        .single-video {
          position: relative;
          top: 0;

          .full-title {
            display: none;
            position: fixed;
            background: rgb(253, 245, 219);
            color: black;
            font-size: .8em;
            max-width: 250px;
            z-index: 1;
            border: 1px solid black;
          }

          li.single-video:hover .sample {
            display: inline-block;
            position: absolute;
            width: 500px;
          }

          iframe {
            text-align: center;
          }
          
          .video-author {
            height: 35px;
            margin: 4px;
          }
          
          .video-title {
            height: 40px;
            margin: 4px;
            border-bottom: 1px solid black;
          }
        }
      }
    }
  }

  .reviews-wrapper {
    display: inline-block;
    vertical-align: top;
    width: 50%;
    
    ul.home-review-set {
      list-style-type: none;

      .home-review {
        /*background: rgba(211, 211, 211, .8);*/
        background: rgba(223, 228, 221, .8);
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 3px;

        .home-review-company {
          display: block;
          margin-bottom: 13px;

          .home-review-venue {
            display: block;
            font-size: .8em;
            color: dark-grey;
          }
        }
        
        .home-review-info {
          margin-bottom: 6px;

          .home-review-rating {
            padding-left: 10px;
          }

          .home-author {
            font-size: .8em;
            padding-left: 10px;
            display: inline-block;
          }
        }
      }
    }
  }

  .sidebar-wrapper {
    display: inline-block;
    width: 20%;
    vertical-align: top;
    float: right;

    h3 {
      text-align: left;
      margin-left: 9px;
    }

    ul {
      list-style-type: none;
      padding-top: 1px;
      margin-left: 10px;

      li {
        margin: 7px 0;
      }
    }
  }
}

