/*GENERAL:*/

input[type=text], 
input[type=email],
input[type=password],
input[type=date],
input[type=url],
textarea {
  -webkit-transition: all 0.10s ease-in-out;
  -moz-transition: all 0.10s ease-in-out;
  -ms-transition: all 0.10s ease-in-out;
  -o-transition: all 0.10s ease-in-out;
  outline: none;
  padding: 3px 0 3px 3px;
  margin: 5px 1px 3px 0;
  border: 1px solid #DDDDDD;

  -webkit-box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  -moz-box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  padding: 10px;
  margin: 0 0 10px 0;
}

input[type=text]:focus, 
input[type=email]:focus, 
input[type=password]:focus,
input[type=date]:focus,
input[type=url]:focus,
textarea:focus {
  box-shadow: 0 0 3px $purple;
  padding: 3px 0px 3px 3px;
  margin: 5px 1px 3px 0px;
  border: 1px solid $purple;

  -webkit-box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  -moz-box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  padding: 10px;
  margin: 0 0 10px 0;
}

a {
  color: #9A593A;
}

body {
  font-family: 'Lato', sans-serif;
  background: url("lauren_jump.jpg") no-repeat center center fixed;
}

h1, h2, h3, h4, h5, h6, label, h1 a, h3 a {
  color: #37566D;
}

button {
  border-radius: 4px;
  background-color: $purple;
  border: 0;
  color: white;
}

input[type=submit] {
    border-radius: 10px;
    background-color: $purple;
    border: 0;
    color: white;
    width: 150px;
    padding: 6px;
    margin: 0 auto;
}

ul {
  -webkit-padding-start: 0;
}

.errors {
  text-align: center;
  margin-top: 15px;

  .error {
    color: firebrick;
  }
