/*HEADER*/

#wrapper {
  position: relative;
  min-height: 100%;

header {
  background: rgb(26, 46, 70);
  width: 100%;
  font-family: 'Lato', sans-serif;
  position: relative;

  a {
    font-family: 'Lato', sans-serif;
    color: white;
    text-decoration: none;
  }

  a:hover {
    color: rgb(223, 228, 221);
    transition: ease-in 100ms;
  }

  nav {
    display: block;

    .header-title {
      width: 27%;
      display: inline-block;

      h1 {
        text-align: center;
      }
    }

    .header-search {
      width: 50%;
      display: inline-block;
      color: #37566D;
      
      .header-search-wrap {      
        width: 500px;

        .search-home {
          margin: 0 auto;

          input[type=text] {
            width: 350px;
          }

          input[type=submit] {
            width: 90px;
            margin-left: 10px;
          }
        }
      }
    }

    .nav-links {
      width: 20%;
      margin-top: 16px;
      display: inline-block;
      float: right;
      
      ul {

        li {
          display: inline-block;
          text-decoration: none;
          padding: 0px 10px;
        }
      }
    }
  }
}
}


