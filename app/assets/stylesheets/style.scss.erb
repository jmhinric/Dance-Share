/*HEADER*/

#wrapper {
  position: relative;
  min-height: 100%;
}

header {
  background: rgb(26, 46, 70);
  width: 100%;
  font-family: 'Lato', sans-serif;
  position: relative;

  a {
    color: white;
    text-decoration: none;
  }

  a:hover {
    color: #D9D3C1;
    /*transition-delay: 0.25s;*/
    transition: ease-in 100ms;
  }

  nav {
    display: block;

    .header-title {
      float: left;
      width: 20%;
      display: inline-block;

      h1 a {
        margin-left: 50px;
      }
    }

    .header-search {
      width: 57%;
      display: inline-block;
      color: #37566D;
      margin-top: 20px;
      
      .header-search-wrap {      
        margin: 0 auto;
        width: 500px;

        .search-home {
          margin: 0 auto;

          input[type=text] {
            width: 350px;
          }

          input[type=submit] {
            width: 90px;
            margin-left: 10px;
          }
        }
      }
    }

    .nav-links {
      width: 20%;
      margin-top: 10px;
      display: inline-block;
      float: right;
      
      ul {
        margin-right: 60px;

        li {
          float: right;
          display: inline-block;
          text-decoration: none;
          padding: 0px 10px;
        }
      }
    }
  }
}


/*=============================================================*/
/*END HEADER*/



