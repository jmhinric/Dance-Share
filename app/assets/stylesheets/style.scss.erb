/*HOMEPAGE*/

main.page-wrapper {
  padding-bottom: 50px;
  display: inline-block;
  width: 100%;

  h2, h3 {
    text-align: center;
    font-style: italic;
    /*font-family: $libre;*/
    font-family: georgia, serif;
  }

  .videos-wrapper {
    margin-left: 10px;
    width: 40%;
    display: inline-block;
    vertical-align: top;
    
    ul.home-video-set {
      width: 480px;
      margin: 0 auto;
      list-style-type: none;

      li {
        display: inline-block;
        margin: 15px 3px 0 3px;
        width: 150px;
        text-align: center;
        vertical-align: top;
        border: 1px solid grey;

        .single-video {
          position: relative;
          top: 0;

          iframe {
            text-align: center;
          }
          
          .video-author {
            height: 35px;
            margin: 4px;
            border-bottom: 1px solid black;
          }
          
          .video-title {
            height: 120px;
            margin: 4px;
          }
        }
      }
    }
  }

  .reviews-wrapper {
    display: inline-block;
    vertical-align: top;
    width: 40%;
  }

  .sidebar-wrapper {
    display: inline-block;
    width: 13%;
    vertical-align: top;
    /*float: right;*/
  }
}

