/*GENERAL:*/

input[type=text], 
input[type=email],
input[type=password],
input[type=date],
input[type=url],
textarea {
  -webkit-transition: all 0.10s ease-in-out;
  -moz-transition: all 0.10s ease-in-out;
  -ms-transition: all 0.10s ease-in-out;
  -o-transition: all 0.10s ease-in-out;
  outline: none;
  padding: 3px 0 3px 3px;
  margin: 5px 1px 3px 0;
  border: 1px solid $purple;

  -webkit-box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  -moz-box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  padding: 10px;
}

input[type=text]:focus, 
input[type=email]:focus, 
input[type=password]:focus,
input[type=date]:focus,
input[type=url]:focus,
textarea:focus {
  outline: none;
  box-shadow: 0 0 3px $purple;
  padding: 3px 0 3px 3px;
  margin: 5px 1px 3px 0;
  border: 1px solid $purple;

  -webkit-box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  -moz-box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  box-shadow: 
    inset 0 0 4px  $purple,
          0 0 8px $purple; 
  padding: 10px;
}

a {
  color: #A62F00;
}

body {
  font-family: 'Lato', sans-serif;
  background: url("lauren_jump.jpg") no-repeat center center fixed;
}

h1, h2, h3, h4, h5, h6, label, h1 a, h3 a {
  color: #37566D;
}

button {
  border-radius: 4px;
  background-color: $purple;
  border: 0;
  color: white;
}

input[type=submit] {
    border-radius: 10px;
    background-color: $purple;
    border: 0;
    color: white;
    width: 150px;
    padding: 6px;
    margin: 0 auto;
}

ul {
  -webkit-padding-start: 0;
}

.errors {
  text-align: center;
  margin-top: 15px;

  .error {
    color: firebrick;
  }
}






/*==========================================================*/
/*HEADER*/








#wrapper {
  position: relative;
  min-height: 100%;

header {
  background: rgb(26, 46, 70);
  width: 100%;
  font-family: 'Lato', sans-serif;
  position: relative;

  a {
    font-family: 'Lato', sans-serif;
    color: white;
    text-decoration: none;
  }

  a:hover {
    color: rgb(223, 228, 221);
    transition: ease-in 100ms;
  }

  nav {
    display: block;

    .header-title {
      width: 27%;
      display: inline-block;

      h1 {
        text-align: center;
      }
    }

    .header-search {
      width: 50%;
      display: inline-block;
      color: #37566D;
      
      .header-search-wrap {      

        .search-home {
          width: 500px;
          margin: 0 auto;

          input[type=text] {
            width: 350px;
          }

          input[type=submit] {
            width: 90px;
            margin-left: 10px;
          }
        }
      }
    }

    .nav-links {
      width: 20%;
      margin-top: 16px;
      display: inline-block;
      float: right;
      
      ul {

        li {
          display: inline-block;
          text-decoration: none;
          padding: 0px 10px;
        }
      }
    }
  }
}
}


/*=============================================================*/
/*END HEADER*/


div#clear-float {
  clear: both;
}

footer {
  color: white;
  background: rgb(26, 46, 70);
  width: 100%;
  bottom: 0;
  height: 50px;
  text-align: center;

  span {
    position: relative;
    bottom: -15px;
    font-size: .8em;
  }
}











